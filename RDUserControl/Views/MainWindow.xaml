<Window x:Class="RDUserControl.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RDUserControl.Views"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:viewmodels="clr-namespace:RDUserControl.ViewModels"
        mc:Ignorable="d"
        Title="{Binding ApplicationTitle}" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <ui:NavigationStore Grid.Column="0" Width="220" Frame="{Binding ElementName=RootFrame}">
            <ui:NavigationStore.Items>
                <ui:NavigationItem Content="Dashboard" Icon="Home24" Command="{Binding NavigateToDashboardCommand}" />
                <ui:NavigationItem Content="User Management" Icon="People24" Command="{Binding NavigateToUserManagementCommand}" />
                <ui:NavigationItem Content="RDP Management" Icon="DesktopFlow24" Command="{Binding NavigateToRdpManagementCommand}" />
            </ui:NavigationStore.Items>
            <ui:NavigationStore.Footer>
                <ui:NavigationItem Content="Settings" Icon="Settings24" Command="{Binding NavigateToSettingsCommand}" />
            </ui:NavigationStore.Footer>
        </ui:NavigationStore>

        <!-- Content Frame -->
        <Border Grid.Column="1" Margin="8" CornerRadius="8" Background="{ui:ThemeResource ApplicationBackgroundBrush}">
            <ContentControl Content="{Binding CurrentPage}" Margin="12" />
        </Border>
    </Grid>
</Window>