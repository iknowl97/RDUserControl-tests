<Page x:Class="RDUserControl.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RDUserControl.Views"
      xmlns:vm="clr-namespace:RDUserControl.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance vm:SettingsViewModel, IsDesignTimeCreatable=True}"
      Title="SettingsPage">

    <Grid>
        <StackPanel Margin="10">
            <Label Content="SMTP Server" />
            <TextBox Text="{Binding SmtpServer}" />
            <Label Content="SMTP Username" Margin="0,10,0,0" />
            <TextBox Text="{Binding SmtpUsername}" />
            <Label Content="SMTP Password" Margin="0,10,0,0" />
            <PasswordBox Password="{Binding SmtpPassword}" />
            <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Page>